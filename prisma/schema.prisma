datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ShopSession {
  shop        String   @id
  accessToken String
  scope       String
  isOnline    Boolean  @default(false)
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
}

model TryOnLog {
  id          Int      @id @default(autoincrement())
  shop        String
  productId   String
  externalId  String?
  variantId   String?
  customerId  String?
  action      String
  metadata    Json?
  createdAt   DateTime @default(now())

  @@index([shop, productId])
}
